<style type="text/css" media="screen">
    html, body{
        margin:0px;
        padding:0px;
        height:100%;
        overflow:hidden;
    }

    /*these are for notification block and have no connection to scheduler itself*/
    #notification {
        position:absolute;
        top:50%;
        left:50%;
        margin:-80px 0 0 -175px;
        width:350px;
        height:160px;
        border:2px solid #798eb0;
        background-color: #deeaf4;
    }
    #notification #button{
        position:absolute;
        top:80%;
        left:50%;
        margin:-15px 0 0 -50px;
        width:100px;
        height:30px;
        border:1px solid #798eb0;
        border-width:1px 1px 2px 2px;
        background-color: #deeaf4;
        color: #798eb0;
        font:bold 14px Arial;
        line-height:30px;
        text-align:center;
        cursor:pointer;
    }
    #notification #text{
        text-align:center;
        font: normal 16px Arial;
        margin-top:10px;
        color: #4f6f8e;
        padding:10px;
    }
</style>

<script type="text/javascript" charset="utf-8">
    function init() {
        
        scheduler.config.xml_date="%Y-%m-%d %H:%i";
        scheduler.config.date_step = "5"
        scheduler.config.details_on_create = true;
        scheduler.config.details_on_dblclick = true;
        scheduler.init('scheduler_here',"","month");
        scheduler.load("./xml/events.xml");
        
    }

    /*this function is used to show notification to PC users and has no connection to scheduler itself*/
    function showNotification(){
        if (navigator.userAgent.match(/iPad/i) == null)
            document.getElementById("notification").style.display="";
    }
</script>

<body onload="init();showNotification()">
    <div id="scheduler_here" class="dhx_cal_container" style='width:100%; height:100%;'>
        <div class="dhx_cal_navline">
            <div class="dhx_cal_prev_button">&nbsp;</div>
            <div class="dhx_cal_next_button">&nbsp;</div>
            <div class="dhx_cal_today_button"></div>
            <div class="dhx_cal_date"></div>
            <div class="dhx_cal_tab" name="day_tab" style="right:332px;"></div>
            <div class="dhx_cal_tab" name="week_tab" style="right:268px;"></div>
            <div class="dhx_cal_tab" name="month_tab" style="right:204px;"></div>
            <!--div class="dhx_cal_tab" name="year_tab" style="right:140px;"></div>
            <div class="dhx_cal_tab" name="agenda_tab" style="right:76px;"></div-->
        </div>
        <div class="dhx_cal_header">
        </div>
        <div class="dhx_cal_data">
        </div>      
    </div>
    
<!-- This notification has no connection to the functionality of dhtmlxScheduler -->
<div id="notification" style="display:none;">
    <div id="text">
        This demo is configured to work for both<br><b>iPad</b> and <b>PC users</b>.<br>
        Use iPad to experience touch screen functionality of dhtmlxScheduler.
    </div>
    <div id="button" onmousedown="this.style.borderWidth='2px 2px 1px 1px'" onmouseup="this.style.borderWidth='1px 1px 2px 2px';this.parentNode.parentNode.removeChild(this.parentNode)">OK</div>
</div>
</body>